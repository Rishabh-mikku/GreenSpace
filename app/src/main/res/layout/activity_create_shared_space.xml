<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_space_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Space Name"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/edit_text_space_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/edit_text_space_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/edit_text_available_slots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Available Slots"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/button_create_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Shared Space"
        android:layout_marginTop="10dp"/>

</LinearLayout>
