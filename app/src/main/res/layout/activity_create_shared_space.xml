<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/plant_gradient"
    android:padding="16dp">

    <!-- Heading TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Shared Spaces for Gardening"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/green_dark"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_leaf"
        android:drawablePadding="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_text_space_name"
                style="@style/CustomEditText"
                android:hint="Space Name"
                android:drawableLeft="@drawable/ic_space"/>

            <EditText
                android:id="@+id/edit_text_space_location"
                style="@style/CustomEditText"
                android:hint="Location"
                android:drawableLeft="@drawable/ic_location"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_space_description"
                style="@style/CustomEditText"
                android:hint="Description"
                android:drawableLeft="@drawable/ic_description"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_owner"
                style="@style/CustomEditText"
                android:hint="Owner Name"
                android:drawableLeft="@drawable/ic_owner"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_available_slots"
                style="@style/CustomEditText"
                android:hint="Available Slots"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_slots"
                android:layout_marginTop="10dp"/>

            <!-- Fixed Green Button -->
            <Button
                android:id="@+id/button_create_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Shared Space"
                android:background="@drawable/gradient_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="14dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
