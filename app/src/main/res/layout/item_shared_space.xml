<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_background_shared_space">

    <!-- Space Name -->
    <TextView
        android:id="@+id/space_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:paddingBottom="4dp"/>

    <!-- Location -->
    <TextView
        android:id="@+id/space_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Central Park, Varanasi"
        android:textSize="18sp"
        android:textColor="@color/dark_green"
        android:textStyle="italic"
        android:paddingBottom="4dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/space_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A beautiful community garden where you can grow plants together."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="4dp"/>

    <!-- Owner -->
    <TextView
        android:id="@+id/space_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner: John Doe"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="4dp"/>

    <!-- Users -->
    <TextView
        android:id="@+id/space_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Users: John Doe"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="4dp"/>

    <!-- Available Slots -->
    <TextView
        android:id="@+id/space_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Slots: 10"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <!-- Join Button -->
    <Button
        android:id="@+id/button_join_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Space"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/green_dark"/>
</LinearLayout>
