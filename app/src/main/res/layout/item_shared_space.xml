<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
        android:id="@+id/space_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/space_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: XYZ"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/space_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: A beautiful community garden."
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_join_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Space"
        android:layout_marginTop="10dp"/>
</LinearLayout>
